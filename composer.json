{
    "name": "t0mmy742/php-tutorial",
    "description": "PHP tutorial using Slim PHP framework and some PSR",
    "type": "project",
    "keywords": ["tutorial", "slim", "psr"],
    "license": "MIT",
    "authors": [
        {
            "name": "Thomas LE BERRE",
            "email": "29512640+t0mmy742@users.noreply.github.com"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-json": "*",
        "ext-pdo": "*",
        "ext-pdo_sqlite": "*",
        "defuse/php-encryption": "^2.2",
        "php-di/php-di": "^6.3",
        "slim/psr7": "^1.2",
        "slim/slim": "^4.5",
        "slim/twig-view": "^3.1",
        "t0mmy742/trailing-slash-middleware": "^1.0"
    },
    "require-dev": {
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^0.12.53",
        "phpstan/phpstan-deprecation-rules": "^0.12.5",
        "phpstan/phpstan-phpunit": "^0.12.16",
        "phpstan/phpstan-strict-rules": "^0.12.5",
        "phpunit/phpunit": "^9.4",
        "squizlabs/php_codesniffer": "^3.5",
        "thecodingmachine/phpstan-strict-rules": "^0.12.1"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "T0mmy742\\PHPTutorial\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "T0mmy742\\PHPTutorial\\Tests\\": "tests/"
        }
    }
}
